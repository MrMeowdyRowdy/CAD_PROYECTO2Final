             Title="Sobre Nosotros">
    <ScrollView>
        <VerticalStackLayout Margin="50" Spacing="30">
            <Label 
            Text="Datos de la Fotografa"
            FontSize="32"
            HorizontalOptions="Start" />
            <Image
            Source="sn.jpg"
                HeightRequest="400"/>
            <Label 
            Text="JESENIA CALERO"
            FontSize="28"
            HorizontalOptions="Start" />
