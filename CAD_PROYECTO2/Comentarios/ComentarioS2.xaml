<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CAD_PROYECTO2.Comentarios.ComentarioS2"
             Title="Comentarios Servicio 2">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="TextColor" Value="SlateGray" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout Margin="10" Spacing="15">
        <VerticalStackLayout>
            <Label Text="Nombre de la Hamburguesa"  />
            <Entry Text="{Binding NoteDetail.Titulo}" Placeholder="Titulo" />
            <BoxView HeightRequest="0.8" Color="Gray" />
        </VerticalStackLayout>


        <VerticalStackLayout>
            <Label Text="Descripcion de la Hamburguesa" />
            <Entry  Text="{Binding NoteDetail.Text}" Placeholder="Comentario" />
            <BoxView HeightRequest="0.8" Color="Gray" />
        </VerticalStackLayout>

        <Button Text="Guardar Nota" Command="{Binding AddUpdateNote2Command}"/>
    </StackLayout>
</ContentPage>