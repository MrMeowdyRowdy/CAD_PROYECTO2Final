<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CAD_PROYECTO2.CDServicios.Servicio2"
             Title="Fotografia Familiar">

    <VerticalStackLayout Margin="30" Spacing="30">
            <Label
            Text="Servicio 2: Fotografia Familiar"
            FontAttributes="Bold"
            FontSize="32"
            HorizontalOptions="Center"/>
            <Image
                Source="cads3.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="400"
                HorizontalOptions="Center" />
            <Label 
            Text="Los mejore momentos se pasan en familia. En conjunto con nuestro equipo fotografico, crearemos recuerdo inolvidables para padres y su familia "
            VerticalOptions="Center" 
            FontSize="18"/>

        <Button Text="Comentarios"
                    HorizontalOptions="End"
                    VerticalOptions="End"
                    Clicked="Comentarios2_Clicked" />
         <Button Text="Volver"
                    HorizontalOptions="End"
                    VerticalOptions="End"
                    Clicked="Volver_Clicked" />
    </VerticalStackLayout>
</ContentPage>